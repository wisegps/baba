<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/ll_main"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:layout_alignParentTop="true"
        android:background="@color/title_back" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/title" />

        <ImageView
            android:id="@+id/iv_back"
            style="@style/title_back_style"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:id="@+id/ll_fault"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/listDetection"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:divider="#00000000"  
          android:dividerHeight="0dip"  
          android:listSelector="@android:color/transparent"   
                 >
            </ListView>
			
            <View android:layout_width="fill_parent" 
                
                android:layout_height="1px"
                android:background="#bbbbbb"
                />
            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/rescue"
                    style="@style/bottom_text_nav_style"
                    android:text=" 救援"
                    android:drawableStart="@drawable/ico_car_help"
                     />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/risk"
                    style="@style/bottom_text_nav_style"
                    android:text=" 报险"
                     android:drawableLeft="@drawable/ico_car_insurance"
                    />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/ask"
                    style="@style/bottom_text_nav_style"
                    android:layout_weight="1"
                    android:text=" 问一下"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/mechanics"
                    style="@style/bottom_text_nav_style"
                    android:text=" 找汽修"
                     android:drawableLeft="@drawable/ico_car_find_service"
                    />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_ask_expert"
                    style="@style/bottom_text_nav_style"
                    android:text=" 问专家"
                     android:drawableLeft="@drawable/ico_car_ask"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.wise.baba.ui.widget.FaultDeletionView
        android:id="@+id/hs_car"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/rl_content"
        android:layout_below="@id/ll_main" />



</RelativeLayout>