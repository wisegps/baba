<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/ll_main"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:layout_alignParentTop="true"
        android:background="@color/title_back" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/title" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_hight"
            android:layout_height="@dimen/title_hight"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margins"
            android:padding="@dimen/margins"
            android:src="@drawable/nav_back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:id="@+id/ll_fault"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/listDetection"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:divider="#00000000"  
          android:dividerHeight="0dip"  
          android:listSelector="@android:color/transparent"   
                 >
            </ListView>

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/rescue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellow"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/margins"
                    android:paddingTop="@dimen/margins"
                    android:text="救援"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/risk"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellow"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/margins"
                    android:paddingTop="@dimen/margins"
                    android:text="报险"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/ask"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellow"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/margins"
                    android:paddingTop="@dimen/margins"
                    android:text="问一下"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/mechanics"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellow"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/margins"
                    android:paddingTop="@dimen/margins"
                    android:text="找汽修"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_ask_expert"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellow"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/margins"
                    android:paddingTop="@dimen/margins"
                    android:text="问专家"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.wise.baba.ui.widget.FaultDeletionView
        android:id="@+id/hs_car"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/rl_content"
        android:layout_below="@id/ll_main" />



</RelativeLayout>