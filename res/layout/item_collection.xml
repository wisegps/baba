<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <com.wise.baba.ui.widget.SlidingView
        android:id="@+id/sv"
        android:layout_width="fill_parent"
        android:layout_height="50dp">        
        <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent" 
	        android:paddingLeft="@dimen/margins"
            android:background="@color/Green_collection" >
            <ImageView
	            android:id="@+id/iv_share"
	            android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_width"
                android:padding="@dimen/margins" 
	            android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
	            android:contentDescription="@string/app_name"
	            android:src="@drawable/share"/>
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:text="20M"
                android:textColor="@color/common_inactive" />
	        <TextView
	            android:id="@+id/tv_name"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:textColor="@color/navy"
	            android:layout_toLeftOf="@id/iv_share"
                android:layout_marginRight="@dimen/margins"
                android:textSize="@dimen/content"
	            android:text="沙河西路加油站" />
	    </RelativeLayout>        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">        
            <TextView 
                 android:id="@+id/tv_del"
                 android:layout_width="wrap_content"
                 android:paddingLeft="@dimen/double_margins"
                 android:paddingRight="@dimen/double_margins"
                 android:layout_height="50dp"
                 android:text="删除"
                 android:textColor="@color/white"
                 android:background="@color/red"
                 android:gravity="center">                        
            </TextView>
        </LinearLayout>
    </com.wise.baba.ui.widget.SlidingView>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:paddingLeft="@dimen/margins">
            <ImageView 
                android:id="@+id/iv_location"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_width"
                android:padding="@dimen/margins" 
                android:layout_alignParentRight="true"
                android:src="@drawable/lbs"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_location"
                android:layout_marginRight="@dimen/margins"
                android:textColor="@color/navy"
                android:text="地址沙河西路" />
        </RelativeLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>
        <RelativeLayout
            android:id="@+id/rl_tel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/navy"
                android:text="电话" />
            <ImageView 
                android:id="@+id/iv_tel"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_width"
                android:padding="@dimen/margins"
                android:layout_alignParentRight="true"
                android:src="@drawable/phone"/>
        </RelativeLayout>
</LinearLayout>