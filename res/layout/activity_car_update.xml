<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/title_back">        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="爱车信息"
            android:textColor="@color/white"
            android:textSize="@dimen/head"/>
        <ImageView 
            android:id="@+id/iv_save"
	        android:layout_width="@dimen/title_hight"
	        android:layout_height="@dimen/title_hight"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="@dimen/margins"
	        android:padding="@dimen/margins"
	        android:layout_centerVertical="true"
	        android:src="@drawable/nav_ok"/>
		<ImageView 
            android:id="@+id/iv_back"
	        android:layout_width="@dimen/title_hight"
	        android:layout_height="@dimen/title_hight"
	        android:layout_marginLeft="@dimen/margins"
	        android:padding="@dimen/margins"
	        android:layout_centerVertical="true"
	        android:src="@drawable/nav_back"/>
	</RelativeLayout>
	<ScrollView 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"	        
	        android:orientation="vertical">
	        <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				android:background="@drawable/et_back"
				android:layout_marginTop="10dp"
		        android:orientation="vertical">
		        <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
			            android:textColor="@color/navy"
					    android:padding="10dp"   
			            android:text="车辆名称："/>
			        <EditText
			            android:id="@+id/et_nick_name"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:textSize="@dimen/content"
					    android:textColor="@color/navy"
					    android:background="@null"
					    android:maxLength="11"
					    android:padding="10dp"/>
			    </LinearLayout>
			    <View 
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/line"/>
			    <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"  
					    android:textColor="@color/navy" 
			            android:text="车牌号：    "/>
			        <EditText
			            android:id="@+id/et_obj_name"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:textSize="@dimen/content"
					    android:textColor="@color/navy"
					    android:background="@null"
					    android:padding="10dp"/>
			    </LinearLayout>
			    <View 
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/line"/>
			    <LinearLayout 
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:orientation="horizontal">	            
				    <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"  
					    android:textColor="@color/navy" 
			            android:text="车型：        "/>
				    <TextView 
				        android:id="@+id/tv_models"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
			            android:textColor="@color/navy"
					    android:padding="10dp"/>
		        </LinearLayout>
		        <View 
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/line"/>
		        <LinearLayout 
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:orientation="horizontal">	            
				    <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
			            android:text="汽油标号："/>
				    <TextView 
				        android:id="@+id/tv_gas_no"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
			            android:textColor="@color/navy"
			            android:drawableRight="@drawable/btn_right"
					    android:padding="10dp"/>
		        </LinearLayout>
		    </LinearLayout>		    
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				android:background="@drawable/et_back"
				android:layout_marginTop="10dp"
		        android:orientation="vertical">
		        <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
			            android:text="违章城市："/>
			        <TextView
			            android:id="@+id/tv_city"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:textSize="@dimen/content"
					    android:textColor="@color/navy"
					    android:drawableRight="@drawable/btn_right"
					    android:padding="10dp" />
			    </LinearLayout>
			    <View 
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/line"/>
		        <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp" 
					    android:textColor="@color/navy"  
			            android:text="车架号：    "/>
			        <EditText
			            android:id="@+id/et_frame_no"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
					    android:background="@null"
					    android:hint="选填"/>
			    </LinearLayout>
			    <View 
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/line"/>
			    <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
			            android:text="发送机号："/>
			        <EditText
			            android:id="@+id/et_engine_no"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
					    android:background="@null"
					    android:hint="选填"/>
			    </LinearLayout>
			    <LinearLayout
			        android:visibility="gone" 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
			            android:text="登记证号："/>
			        <EditText
			            android:id="@+id/et_regist_no"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
					    android:background="@null"
					    android:hint="选填"/>
			    </LinearLayout>
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				android:background="@drawable/et_back"
				android:layout_marginTop="10dp"
		        android:orientation="vertical">
		        <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
			            android:text="保险公司："/>
			        <TextView 
			            android:id="@+id/tv_insurance_company"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:drawableRight="@drawable/btn_right"
					    android:textColor="@color/navy"/>
			    </LinearLayout>
			    <View 
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/line"/>
			    <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
			            android:text="联系电话："/>
			        <EditText
			            android:id="@+id/et_insurance_tel"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
					    android:background="@null"
					    android:text="100000"/>
			    </LinearLayout>
			    <View 
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/line"/>
			    <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
			            android:text="保险时间："/>
			        <TextView 
			            android:id="@+id/tv_insurance_date"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"/>
			    </LinearLayout>
			    <View 
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/line"/>
			    <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp" 
					    android:textColor="@color/navy"  
			            android:text="保单号：    "/>
			        <EditText
			            android:id="@+id/et_insurance_no"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
					    android:background="@null"/>
			    </LinearLayout>
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				android:background="@drawable/et_back"
				android:layout_marginTop="10dp"
		        android:orientation="vertical">
		        <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
			            android:text="购车4S店："/>
			        <TextView 
			            android:id="@+id/tv_maintain_company"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
			            android:drawableRight="@drawable/btn_right"/>
			    </LinearLayout>
			    <View 
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/line"/>
			    <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
			            android:text="联系电话："/>
			        <EditText
			            android:id="@+id/et_maintain_tel"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
					    android:background="@null"/>
			    </LinearLayout>
			    <View 
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/line"/>
			    <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
			            android:text="购车时间："/>
			        <TextView 
			            android:id="@+id/tv_buy_date"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"   
			            android:textColor="@color/navy"/>
			    </LinearLayout>
			    <View 
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/line"/>
			    <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal">
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"
					    android:textColor="@color/navy"
			            android:text="年检时间："/>
			        <TextView 
			            android:id="@+id/tv_year_check"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
					    android:padding="10dp"
			            android:textColor="@color/navy"/>
			    </LinearLayout>
		    </LinearLayout>
	    </LinearLayout>
	</ScrollView>
</LinearLayout>
