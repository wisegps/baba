<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical" >
    <RelativeLayout 
    	android:id="@+id/ll_top"
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/title_hight"
        android:background="@color/title_back">
	    <TextView
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_centerInParent="true"
	         android:text="更多"
	         android:gravity="center"
	         android:textSize="@dimen/title"
	         android:textColor="@color/white" />
        <ImageView 
            android:id="@+id/iv_back"
            android:visibility="gone"
	       style="@style/title_back_style"/>
	</RelativeLayout>
	<ScrollView 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        <RelativeLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content">            
		        <TextView
		            android:id="@+id/tv_sms"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:padding="@dimen/double_margins"
		            android:textSize="@dimen/content"
		            android:text="我的信息"
		            android:drawableRight="@drawable/btn_right"
		            android:textColor="@color/navy" 
		            android:background="@drawable/bg_white"/>
		        <ImageView 
			        android:id="@+id/iv_noti"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="40dp"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:visibility="gone"
		            android:src="@drawable/small_red_dot"/>
	        </RelativeLayout>
			<View 
	            android:layout_width="fill_parent"
	            android:layout_height="0.5dp"
	            android:background="@color/line"/>
	        <TextView
	            android:id="@+id/tv_collection"
	            android:text="我的收藏"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="@dimen/double_margins"
	            android:textSize="@dimen/content"
	            android:drawableRight="@drawable/btn_right"
	            android:textColor="@color/navy" 
	            android:background="@drawable/bg_white"/>
	        <RelativeLayout 
		        android:layout_marginTop="@dimen/margins"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content">
		        <TextView
		            android:id="@+id/tv_traffic"
		            android:text="查询违章"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:padding="@dimen/double_margins"
		            android:textSize="@dimen/content"
		            android:drawableRight="@drawable/btn_right"
		            android:textColor="@color/navy" 
		            android:background="@drawable/bg_white"/>
		        <ImageView 
			        android:id="@+id/iv_vio"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="40dp"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:visibility="gone"
		            android:src="@drawable/small_red_dot"/>
	        </RelativeLayout>
	        <View 
	            android:layout_width="fill_parent"
	            android:layout_height="0.5dp"
	            android:background="@color/line"/>	
	        <TextView
	            android:id="@+id/tv_remind"
	            android:text="车务提醒"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="@dimen/double_margins"
	            android:textSize="@dimen/content"
	            android:drawableRight="@drawable/btn_right"
	            android:textColor="@color/navy" 
	            android:background="@drawable/bg_white"/>		
	        <TextView
	            android:id="@+id/tv_set"
	            android:text="设置中心"
	            android:layout_marginTop="@dimen/margins"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="@dimen/double_margins"
	            android:textSize="@dimen/content"
	            android:drawableRight="@drawable/btn_right"
	            android:textColor="@color/navy" 
	            android:background="@drawable/bg_white"/>
	        <TextView
	            android:id="@+id/tv_finish"
	            android:text="退出系统"
	            android:layout_marginTop="@dimen/margins"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="@dimen/double_margins"
	            android:textSize="@dimen/content"
	            android:textColor="@color/navy" 
	            android:background="@drawable/bg_white"/>
	    </LinearLayout>
	</ScrollView>    
</LinearLayout>