<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tc="http://schemas.android.com/apk/res/com.wise.baba"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rl_task"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/white">	    
	    <com.wise.state.TasksCompletedView
	        android:id="@+id/tasks_view"
	        android:layout_centerInParent="true"
	        android:layout_width="fill_parent"
	        android:layout_height="140dp"
	        tc:radius="55dp"
	        tc:circleColor="@color/ring_bg_color"
	        tc:ringColor="@color/ring_color"
	        tc:strokeWidth="15dp" />
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:gravity="center_horizontal"
	        android:orientation="vertical">
	        <TextView 
	            android:id="@+id/tv_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/navy"
	            android:text="健康指数"/>
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            <TextView
	                android:id="@+id/tv_score" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="@dimen/bigs_number"
		            android:text="100"/>
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/navy"
		            android:text="分"/>
	        </LinearLayout>	        
	        <TextView 
	            android:id="@+id/tv_xx_detection"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/blue_press"
	            android:text="今日限行"/>
	    </LinearLayout>
	</RelativeLayout>
</LinearLayout>