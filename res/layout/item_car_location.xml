<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#CCFFFFFF">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/tv_item_car_location_oil"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_map"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/color_common"
            android:textSize="@dimen/main"
            android:text="加油站"/>
        <TextView 
            android:id="@+id/tv_item_car_location_Parking"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_map"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/color_common"
            android:textSize="@dimen/main"
            android:text="停车场"/>
        <TextView 
            android:id="@+id/tv_item_car_location_4s"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_map"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/color_common"
            android:textSize="@dimen/main"
            android:text="4S店"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/tv_item_car_location_specialist"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_map"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/color_common"
            android:textSize="@dimen/main"
            android:text="专修店"/>
        <TextView 
            android:id="@+id/tv_item_car_location_automotive_beauty"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_map"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/color_common"
            android:textSize="@dimen/main"
            android:text="汽车美容店"/>
        <TextView 
            android:id="@+id/tv_item_car_location_wash"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_map"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/color_common"
            android:textSize="@dimen/main"
            android:text="洗车店"/>
    </LinearLayout>

</LinearLayout>
