<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_adress" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/Green_Lights"
        android:paddingLeft="@dimen/margins">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"            
	        android:layout_centerVertical="true"
            android:orientation="horizontal">            
	        <TextView
	            android:id="@+id/tv_item_traffic_adress" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="广深高速"
	            android:layout_marginRight="5dp"
	            android:textSize="@dimen/content"
	            android:textColor="@color/color_navy"/>
	        <TextView 
	            android:id="@+id/tv_status"
	            android:visibility="gone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/common_inactive"
	            android:text="(已处理)"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_traffic_help" 
            android:layout_width="@dimen/double_margins"
            android:layout_height="@dimen/double_margins"
            android:layout_marginRight="@dimen/margins"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_right"/>
        <ImageView 
            android:id="@+id/iv_traffic_share"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_width"
            android:padding="@dimen/margins"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_traffic_help"
            android:src="@drawable/share"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margins"> 
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp">                      
	        <TextView
		        android:id="@+id/tv_item_traffic_data" 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="2013-06-21"
		        android:textColor="#cccccc"
		        android:textSize="@dimen/content"/>
	        <TextView
		        android:id="@+id/tv_item_traffic_city" 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
		        android:textColor="#cccccc"
		        android:textSize="@dimen/content"/>
        </RelativeLayout>
	    <TextView
	        android:id="@+id/tv_item_traffic_content" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="违章地点：广深高速"
	        android:layout_marginBottom="@dimen/margins"
	        android:textSize="@dimen/content"
            android:textColor="@color/color_navy"/>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center"
	            android:orientation="horizontal">
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="扣分 "
			        android:textSize="@dimen/content"
			        android:textColor="@color/navy"/>
		        <TextView
			        android:id="@+id/tv_item_traffic_fraction" 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:text="0"
			        android:textSize="@dimen/content"
			        android:textColor="@color/Green_traffic"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center"
	            android:orientation="horizontal">
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="罚款 "
			        android:textSize="@dimen/content"
			        android:textColor="@color/navy"/>
		        <TextView
			        android:id="@+id/tv_item_traffic_money" 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:text="0"
			        android:textSize="@dimen/content"
			        android:textColor="@color/Green_traffic"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center"
	            android:orientation="horizontal">
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="人次 "
			        android:textSize="@dimen/content"
			        android:textColor="@color/navy"/>
		        <TextView
			        android:id="@+id/tv_item_traffic_total" 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:text="0"
			        android:textSize="@dimen/content"
			        android:textColor="@color/Green_traffic"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center"
	            android:orientation="horizontal">
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="吐槽 "
			        android:textSize="@dimen/content"
			        android:textColor="@color/navy"/>
		        <TextView
			        android:id="@+id/tv_item_traffic_complain" 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:text="0"
			        android:textSize="@dimen/content"
			        android:textColor="@color/Green_traffic"/>
	        </LinearLayout>
	    </LinearLayout>
    </LinearLayout>    
</LinearLayout>