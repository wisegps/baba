<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.wise.baba"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/margins" >
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margins"
        android:gravity="center_horizontal"
        android:textColor="@color/navy_light"
        android:textSize="@dimen/small"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:orientation="horizontal" >
        <com.wise.baba.ui.widget.CircleImageView
            android:id="@+id/iv_friend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/margins"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_car"
            app:border_color="@color/white"
            app:border_width="1dp" />
        <TextView
            android:id="@+id/tv_friend_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="adsfasdf"
            android:background="@drawable/chat_duifang_shuru"
            android:paddingLeft="15dp"
            android:paddingTop="@dimen/margins"
            android:paddingBottom="@dimen/margins"
            android:paddingRight="@dimen/margins"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />
    </LinearLayout>
</LinearLayout>