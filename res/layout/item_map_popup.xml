<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_ar_popup_normal"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/margins"
    android:paddingRight="@dimen/margins"
    android:id="@+id/ll_adress"
    android:orientation="horizontal" >
    <TextView 
        android:id="@+id/tv_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/margins"/>
    <TextView
        android:id="@+id/tv_navi" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="导航"/>
    
    <TextView
        android:id="@+id/tv_travel"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margins"
        android:textColor="@color/white"
        android:text="行程"/>
    
    <!-- 导航图标
    <ImageView 
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/btn_detection_right"/>
         -->
</LinearLayout>