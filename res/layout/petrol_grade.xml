<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_baise"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/choice_petrol_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/title_back">        
        <TextView
            android:id="@+id/my_vechile_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="汽油标号"
            android:textColor="@color/white"
            android:textSize="@dimen/head" />
        <ImageView 
            android:id="@+id/iv_back"
	       style="@style/title_back_style"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/petrol_grade_lv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/gray"
        android:dividerHeight="0.5dip"
        android:listSelector="@drawable/bg_item_selector" >
    </ListView>
</LinearLayout>