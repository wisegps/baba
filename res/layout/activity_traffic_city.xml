<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical" >
    <!-- 选择省份 -->
    <RelativeLayout
        android:id="@+id/illegal_city_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/title_back">
        <TextView
            android:id="@+id/my_vechile_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="违章城市"
            android:textColor="@color/white"
            android:textSize="@dimen/head" />
        <ImageView 
            android:id="@+id/iv_back"
	       style="@style/title_back_style"/>
    </RelativeLayout>    
    <GridView 
        android:id="@+id/gv_choose_city"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="4"
        android:listSelector="@drawable/bg_item_selector"
        android:stretchMode="columnWidth"
        android:background="@color/white"
        android:horizontalSpacing="10dp"/>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">        
	    <ListView
	        android:id="@+id/lv_provnice"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:scrollbars="none"
	        android:divider="@color/blue_line"
	        android:dividerHeight="0.5dip" >
	    </ListView>
	    <ListView
	        android:id="@+id/lv_city"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:scrollbars="none"
	        android:divider="@color/blue_line"
	        android:dividerHeight="0.5dip" >
	    </ListView>
    </LinearLayout>
</LinearLayout>