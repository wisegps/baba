<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_huise">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/title_back">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="提醒明细"
            android:textColor="@color/white"
            android:textSize="@dimen/head"/>
        <ImageView 
            android:id="@+id/iv_back"
	        android:layout_width="@dimen/title_hight"
	        android:layout_height="@dimen/title_hight"
	        android:layout_marginLeft="@dimen/margins"
	        android:padding="@dimen/margins"
	        android:layout_centerVertical="true"
	        android:src="@drawable/nav_back"/>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/bg_qianlv_biaoti"
	    android:paddingTop="@dimen/margins"
	    android:paddingBottom="@dimen/margins"
	    android:orientation="horizontal">
	    <Button 
	        android:id="@+id/bt_edit"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@null"
	        android:drawableTop="@drawable/tab_eidt"
	        android:textColor="@color/color_white"
	        android:text="编辑"/>
	    <Button 
	        android:id="@+id/bt_delete"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@null"
	        android:drawableTop="@drawable/tab_delete"
	        android:textColor="@color/color_white"
	        android:text="删除"/>
	    <Button 
	        android:id="@+id/bt_share"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@null"
	        android:drawableTop="@drawable/nav_icon_share"
	        android:textColor="@color/color_white"
	        android:text="分享"/>
	    <Button 
	        android:id="@+id/bt_place"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@null"
	        android:drawableTop="@drawable/tab_place"
	        android:textColor="@color/color_white"
	        android:text="地点"/>
	</LinearLayout>
</RelativeLayout>
