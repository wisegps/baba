<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.wise.baba" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/margins">
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/small"
        android:textColor="@color/navy_light"
        android:layout_marginBottom="@dimen/margins"
        android:visibility="gone"/>
    <RelativeLayout 
    	android:gravity="center_vertical"
    	android:layout_marginLeft="50dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.wise.baba.ui.widget.CircleImageView 
	        android:id="@+id/iv_me"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginLeft="@dimen/margins"
	        android:src="@drawable/icon_car"
	        app:border_width="1dp"
	        app:border_color="@color/white" />
	    <RelativeLayout
	        android:id="@id/rl_content" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_toLeftOf="@id/iv_me"
	        android:background="@drawable/chat_i_shuru">
		    <ImageView
		        android:id="@+id/iv_me_sound"
		        android:layout_width="30dp"
		        android:layout_height="30dp"		        
		        android:layout_centerVertical="true"
		        android:padding="5dp"
		        android:scaleType="fitEnd"
		        android:src="@drawable/sound_me_2"/>
	    </RelativeLayout>
	    <TextView
	        android:id="@+id/tv_sound_lenght"
	        android:layout_toLeftOf="@id/rl_content"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="5dp"
	        android:textColor="@color/navy"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
    </RelativeLayout>    
</LinearLayout>