<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.wise.baba" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <RelativeLayout
	    android:id="@+id/rl_photo_info"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/margins">
	    <TextView
	        android:id="@+id/tv_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:textColor="@color/navy"
	        android:text="2014-05-26 16:40"/>
	    <com.wise.baba.ui.widget.CircleImageView 
            android:id="@+id/iv_persion_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            app:border_width="1dp"
            android:src="@drawable/icon_people_no"
            app:border_color="@color/white" />
	    <TextView
	        android:id="@+id/tv_persion" 
	        android:layout_toRightOf="@id/iv_persion_icon"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="@dimen/margins"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/navy"
	        android:text="Eiby"/>
	    <ImageView 
	        android:id="@+id/iv_car_logo"
	        android:layout_toRightOf="@id/tv_persion"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="@dimen/margins"
	        android:src="@drawable/icon_add"
	        android:layout_width="20dp"
	        android:layout_height="20dp"/>
	    <ImageView 
	        android:id="@+id/iv_sex"
	        android:layout_toRightOf="@id/iv_car_logo"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="@dimen/margins"
	        android:src="@drawable/icon_add"
	        android:layout_width="20dp"
	        android:layout_height="20dp"/>
	</RelativeLayout>	
    <ImageView 
        android:id="@+id/iv_pic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_content"
        android:padding="@dimen/margins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/main"
        android:textColor="@color/navy"
        android:text="新买的宝马X3,帅吧？"/>
    <TextView
        android:id="@+id/tv_adress"
        android:layout_marginLeft="@dimen/margins"
        android:layout_marginRight="@dimen/margins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small"
        android:textColor="@color/Green_Light"
        android:text="深圳十南山区朱广西路"/>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margins">
	    <TextView
	        android:id="@+id/tv_share" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/Green_Light"
            android:background="@drawable/bg_border_green"
            android:drawableLeft="@drawable/icon_share_bule"
            android:drawablePadding="@dimen/margins"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="分享"/>
        <TextView
            android:id="@+id/tv_praise"
            android:layout_toLeftOf="@id/tv_share" 
            android:layout_marginRight="@dimen/margins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Green_Light"
            android:background="@drawable/bg_border_green"
            android:drawableLeft="@drawable/icon_zan_reply"
            android:drawablePadding="@dimen/margins"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="320"/>
        <TextView
            android:id="@+id/tv_see" 
            android:layout_marginRight="@dimen/margins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Green_Light"
            android:drawableLeft="@drawable/icon_see"
            android:drawablePadding="@dimen/margins"
            android:layout_alignBottom="@id/tv_praise"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="527"/>
    </RelativeLayout>
</LinearLayout>