<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_huise">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    <RelativeLayout 
	    	android:id="@+id/ll_main"
		    android:layout_width="fill_parent"
		    android:layout_height="@dimen/title_hight"
	        android:background="@color/title_back">
		    <TextView
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:layout_centerInParent="true"
		         android:text="设置中心"
		         android:gravity="center"
		         android:textSize="@dimen/title"
		         android:textColor="@color/white" />
		    <ImageView 
	            android:id="@+id/iv_back"
		        android:layout_width="@dimen/title_hight"
		        android:layout_height="@dimen/title_hight"
		        android:layout_marginLeft="@dimen/margins"
		        android:padding="@dimen/margins"
		        android:layout_centerVertical="true"
		        android:src="@drawable/nav_back"/>
		</RelativeLayout>
		<RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/margins"
	        android:background="@drawable/bg_white"
	        android:padding="@dimen/margins"
	        android:orientation="vertical" >
		    <ImageView 
		        android:contentDescription="@string/app_name"
		        android:id="@+id/iv_logo"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:src="@drawable/icon_add"/>
	        <TextView
	            android:id="@+id/tv_login"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:padding="@dimen/margins"
	            android:layout_toRightOf="@id/iv_logo"
	            android:text="登录/注册"
	            android:textSize="@dimen/main"
	            android:textColor="@color/blue" />
	    </RelativeLayout>
	    <TextView
	        android:id="@+id/tv_car"
	        android:layout_marginTop="@dimen/margins"
	        android:text="我的爱车"
	        android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margins"
            android:paddingTop="@dimen/double_margins"
            android:paddingBottom="@dimen/double_margins"
            android:textSize="@dimen/main"
            android:textColor="@color/blue" 
            android:background="@drawable/bg_white"/>
	    <TextView
	        android:layout_marginTop="@dimen/margins"
	        android:text="反馈建议"
	        android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margins"
            android:paddingTop="@dimen/double_margins"
            android:paddingBottom="@dimen/double_margins"
            android:textSize="@dimen/main"
            android:textColor="@color/blue" 
            android:background="@drawable/bg_white"/>    
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="0.5dp"
	        android:background="@color/line"/>
	    <TextView
	        android:text="关于叭叭"
	        android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margins"
            android:paddingTop="@dimen/double_margins"
            android:paddingBottom="@dimen/double_margins"
            android:textSize="@dimen/main"
            android:textColor="@color/blue" 
            android:background="@drawable/bg_white"/>
    </LinearLayout>
    <Button
        android:id="@+id/bt_login_out" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/pink"
        android:textColor="@color/white"
        android:textSize="@dimen/bt"
        android:layout_alignParentBottom="true"
        android:text="退出登录"/>
</RelativeLayout>