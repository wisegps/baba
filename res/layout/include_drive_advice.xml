<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_speed_up"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="@color/navy"
            android:textSize="@dimen/big_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ico_drive_spd_up"
            android:gravity="center_horizontal"
            android:text=" 急加速  "
            android:layout_gravity="center"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/margins"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_speed_down"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="@color/navy"
            android:textSize="@dimen/big_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ico_drive_spd_down"
            android:gravity="center_horizontal"
            android:text=" 急减速  "
             android:layout_gravity="center"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/margins"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_speed_stop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="@color/navy"
            android:textSize="@dimen/big_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ico_drive_spd_stop"
            android:gravity="center_horizontal"
            android:text=" 急转弯  "
             android:layout_gravity="center"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />
    </LinearLayout>

</LinearLayout>