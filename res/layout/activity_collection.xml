<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/title_back">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="我的收藏"
            android:textColor="@color/white"
            android:textSize="@dimen/head"/>        
        <ImageView 
            android:id="@+id/iv_back"
	       style="@style/title_back_style"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.wise.baba.ui.widget.WaitLinearLayout
	        android:id="@+id/ll_wait"
	        android:layout_centerInParent="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">        
	    </com.wise.baba.ui.widget.WaitLinearLayout>
        <RelativeLayout 
            android:id="@+id/rl_Note"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout 
	            android:layout_centerInParent="true"
                android:layout_width="264dp"
                android:layout_height="162dp">                
	            <ImageView
	                android:id="@+id/iv_nothing"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:src="@drawable/icon_reminder" />	            
	            <TextView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center_horizontal"
	                android:textColor="@color/white"
	                android:textSize="@dimen/title" 
	                android:layout_alignParentBottom="true"
	                android:layout_marginBottom="25dp"
	                android:text="没有收藏记录"/>
            </RelativeLayout>
        </RelativeLayout>        
	    <xlist.XListView 
	        android:id="@+id/lv_collection"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:cacheColorHint="#00000000"
	        android:divider="@null"/> 
    </RelativeLayout>   
</LinearLayout>