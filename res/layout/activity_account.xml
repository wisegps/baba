<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.wise.baba"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/ll_main"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/title_back" >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我的账户"
            android:textColor="@color/white"
            android:textSize="@dimen/title" />
        <ImageView
            android:id="@+id/iv_back"
           style="@style/title_back_style"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" 
        android:paddingLeft="@dimen/margins"
        android:paddingTop="@dimen/margins"
        android:paddingBottom="@dimen/margins"
        android:paddingRight="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />
        <com.wise.baba.ui.widget.CircleImageView
            android:id="@+id/iv_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_people_no"
            app:border_color="@color/white"
            app:border_width="1dp" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_white"
            android:gravity="right"
            android:paddingLeft="@dimen/margins"
        	android:paddingTop="@dimen/margins"
        	android:paddingBottom="@dimen/margins"
        	android:paddingRight="30dp"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="手机"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_white"
            android:drawableRight="@drawable/btn_right"
            android:drawablePadding="@dimen/margins"
            android:gravity="right"
            android:padding="10dp"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="昵称"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_white"
            android:drawableRight="@drawable/btn_right"
            android:drawablePadding="@dimen/margins"
            android:gravity="right"
            android:padding="10dp"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="邮箱"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_white"
            android:drawableRight="@drawable/btn_right"
            android:drawablePadding="@dimen/margins"
            android:gravity="right"
            android:padding="10dp"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="性别"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_birth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_white"
            android:gravity="right"
            android:padding="10dp"
            android:drawableRight="@drawable/btn_right"
            android:drawablePadding="@dimen/margins"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="生日"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_update_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_margins"
        android:background="@drawable/bg_white"
        android:drawableRight="@drawable/btn_right"
        android:drawablePadding="@dimen/margins"
        android:padding="10dp"
        android:text="修改密码"
        android:textColor="@color/navy"
        android:textSize="@dimen/content" />

</LinearLayout>