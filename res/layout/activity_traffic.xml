<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/title_back" >
        <TextView
            android:id="@+id/tv_car"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:text="车辆违章"
            android:textColor="@color/white"
            android:textSize="@dimen/head" />
        
        <ImageView
            android:id="@+id/iv_update_car"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/title_hight"
	        android:layout_height="@dimen/title_hight"
	        android:layout_marginRight="@dimen/margins"
	        android:padding="@dimen/margins"
	        android:layout_centerVertical="true"
            android:src="@drawable/document"/>
        <ImageView 
            android:id="@+id/iv_back"
	       style="@style/title_back_style"/>
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/ll_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/margins"
        android:paddingBottom="@dimen/margins"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
    </LinearLayout>
    <com.wise.baba.ui.widget.HScrollLayout
          xmlns:android="http://schemas.android.com/apk/res/android"    
          android:id="@+id/hsl_traffic"  
          android:layout_below="@id/ll_top"
          android:layout_above="@id/ll_image"
          android:layout_width="fill_parent"   
          android:layout_height="fill_parent"/>
</RelativeLayout>