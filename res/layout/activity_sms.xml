<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_bg">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/title_back">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="通知"
            android:textColor="@color/white"
            android:textSize="@dimen/head"/>
        <ImageView
            android:id="@+id/iv_back"
           style="@style/title_back_style"/>
	</RelativeLayout>
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margins">
        <TextView 
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/main"
            android:padding="@dimen/margins"
            android:textColor="@color/white"
            android:background="@drawable/bg_border_left_press"
            android:text="车务"/>
        <TextView 
            android:id="@+id/tv_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/main"
            android:padding="@dimen/margins"
            android:textColor="@color/Green"
            android:background="@drawable/bg_border_center"
            android:text="故障"/>
        <TextView 
            android:id="@+id/tv_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/main"
            android:padding="@dimen/margins"
            android:textColor="@color/Green"
            android:background="@drawable/bg_border_center"
            android:text="报警"/>
        <TextView 
            android:id="@+id/tv_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/main"
            android:padding="@dimen/margins"
            android:textColor="@color/Green"
            android:background="@drawable/bg_border_center"
            android:text="违章"/>
        <TextView 
            android:id="@+id/tv_0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/main"
            android:padding="@dimen/margins"
            android:textColor="@color/Green"
            android:background="@drawable/bg_border_right"
            android:text="其他"/>
    </LinearLayout>
	<com.wise.baba.ui.widget.HScrollLayout
          xmlns:android="http://schemas.android.com/apk/res/android"    
          android:id="@+id/hsl_sms"
          android:layout_width="fill_parent"   
          android:layout_height="fill_parent"/>
</LinearLayout>