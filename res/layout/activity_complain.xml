<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
    <LinearLayout 
        android:id="@+id/ll_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout 
	    	android:id="@+id/ll_main"
		    android:layout_width="fill_parent"
		    android:layout_height="@dimen/title_hight"
	        android:background="@color/title_back">
		    <TextView
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:layout_centerInParent="true"
		         android:text="违章吐槽"
		         android:gravity="center"
		         android:textSize="@dimen/head"
		         android:textColor="@color/white" />
	        <ImageView 
	            android:id="@+id/iv_back"
		       style="@style/title_back_style"/>
		</RelativeLayout>
		<TextView
		    android:id="@+id/tv_adress"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textSize="@dimen/main"
		    android:textColor="@color/navy"
		    android:paddingTop="@dimen/margins"
		    android:paddingBottom="@dimen/margins"
		    android:paddingRight="@dimen/double_margins"
		    android:paddingLeft="@dimen/double_margins"
		    android:background="@color/Green_Lights"
		    android:text="广深高速600米"/>
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingTop="@dimen/margins"
		    	android:paddingBottom="@dimen/margins"
		    	android:paddingRight="@dimen/margins"
		    	android:paddingLeft="@dimen/double_margins"
	            android:textColor="@color/navy"
	            android:textSize="@dimen/main"
	            android:text="人次"/>
	        <TextView
	            android:id="@+id/tv_total_score"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="30dp"
	            android:textColor="@color/blue"
	            android:textSize="@dimen/content"
	            android:text="0"/>
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:padding="@dimen/margins"
	            android:textColor="@color/navy"
	            android:textSize="@dimen/content"
	            android:text="吐槽"/>
	        <TextView
	            android:id="@+id/tv_total_complain"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@color/blue"
	            android:textSize="@dimen/content"
	            android:text="0"/>
	    </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/v_line"
        android:layout_below="@id/ll_top"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#D3DCE0" />
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/Green_Light"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"  
            android:textSize="@dimen/main"
            android:textColor="@color/white"
            android:padding="@dimen/margins"    
            android:text="发布"/>
        <EditText 
            android:id="@+id/et_complain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margins"
            android:layout_marginRight="@dimen/margins"
            android:background="@drawable/et_back"
            android:hint="欢迎吐槽"
            android:layout_toLeftOf="@id/tv_send"/>
    </RelativeLayout>
    <com.wise.baba.ui.widget.WaitLinearLayout
        android:id="@+id/ll_wait"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">        
    </com.wise.baba.ui.widget.WaitLinearLayout>
    <xlist.XListView 
       android:id="@+id/lv_complain"
       android:visibility="gone"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:divider="@null"
       android:footerDividersEnabled="true"
       android:cacheColorHint="#00000000"
       android:layout_below="@id/v_line"
       android:layout_above="@id/rl_bottom"/>
</RelativeLayout>