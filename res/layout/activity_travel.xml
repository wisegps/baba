<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/title_back" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="车辆行程"
            android:textColor="@color/white"
            android:textSize="@dimen/title" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_hight"
            android:layout_height="@dimen/title_hight"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margins"
            android:padding="@dimen/margins"
            android:src="@drawable/nav_back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_light"
            android:padding="@dimen/margins" >

            <TextView
                android:id="@+id/tv_travel_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="2014-12-01"
                android:textColor="@color/common"
                android:textSize="@dimen/main" />

            <ImageView
                android:id="@+id/iv_activity_travel_data_previous"
                android:layout_width="@dimen/double_margins"
                android:layout_height="@dimen/double_margins"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_travel_date"
                android:contentDescription="@string/app_name"
                android:src="@drawable/body_icon_arrow_contrary" />

            <ImageView
                android:id="@+id/iv_activity_travel_data_next"
                android:layout_width="@dimen/double_margins"
                android:layout_height="@dimen/double_margins"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_travel_date"
                android:contentDescription="@string/app_name"
                android:src="@drawable/body_icon_arrow2" />
        </RelativeLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:stretchColumns="*" >

            <TableRow>

                <TextView
                    android:id="@+id/tv_distance"
                    android:gravity="left"
                    android:paddingBottom="5dp"
                    android:text="行驶总里程：37.00KM"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />

                <TextView
                    android:id="@+id/tv_fuel"
                    android:gravity="left"
                    android:paddingBottom="5dp"
                    android:text="油耗：4.15L"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/tv_hk_fuel"
                    android:gravity="left"
                    android:paddingBottom="5dp"
                    android:text="百公里油耗：11.20L"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />

                <TextView
                    android:id="@+id/tv_money"
                    android:gravity="left"
                    android:paddingBottom="5dp"
                    android:text="花费：31.04元"
                    android:textColor="@color/common"
                    android:textSize="@dimen/content" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_activity_travel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/double_margins"
        android:cacheColorHint="#00000000"
        android:divider="@null" >
    </ListView>

</LinearLayout>