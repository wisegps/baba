<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/title_back" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="常用地址"
            android:textColor="@color/white"
            android:textSize="@dimen/title" />

        <ImageView
            android:id="@+id/iv_back"
           style="@style/title_back_style"/>

        <TextView
            android:id="@+id/address_add"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_hight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margins"
            android:gravity="center"
            android:padding="@dimen/margins"
            android:text="添加"
            android:textColor="@color/white"
            android:textSize="@dimen/content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp" >

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_adress"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="家" />

            <ImageView
                android:id="@+id/ad_navigation"
                android:layout_width="36dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dip"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@drawable/lbs"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ad_delete"
                android:layout_width="36dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@drawable/map_delete"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_company"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_adress"
            android:orientation="horizontal"
            android:padding="8dip" >

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:background="@drawable/bg_baba"
                android:gravity="center_vertical"
                android:text="公司" />

            <ImageView
                android:id="@+id/ad_navigation_1"
                android:layout_width="36dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dip"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@drawable/lbs"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ad_delete_1"
                android:layout_width="36dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@drawable/map_delete"
                android:visibility="gone" />
        </LinearLayout>

        <ListView
            android:id="@+id/my_address_add"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="8dp"
            android:listSelector="#00000000" />
    </LinearLayout>

</LinearLayout>