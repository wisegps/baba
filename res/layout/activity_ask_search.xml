<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
    <LinearLayout 
    	android:id="@+id/ll_main"
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/title_hight"
        android:background="@color/title_back">
        <ImageView 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_launcher"/>
	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center_vertical"
	         android:text="交通规则"
	         android:textSize="@dimen/title"
	         android:textColor="@color/white" />
	    <EditText 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:hint="请输入问题"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/ll_bottom"
	    android:layout_alignParentBottom="true"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    <Button 
	        android:id="@+id/bt_ask_friend"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bg_bt_blue"
	        android:textSize="@dimen/main"
	        android:text="向车友提问一下"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:layout_below="@id/ll_main"
	    android:layout_above="@id/ll_bottom">
	    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        	android:background="@drawable/bg_card"
            android:padding="@dimen/margins"
            android:gravity="center_horizontal"
            android:text="知识库(100)"
            android:textColor="@color/common" />	
	    <LinearLayout 
	        android:id="@+id/ll_ask"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/margins"
	    	android:background="@drawable/bg_card"
	        android:orientation="vertical">
	        <TextView
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:text="超速多少分"
		         android:textColor="@color/common" />
	        <TextView
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:text="驾驶中型以上的货车，小车，危险物品运输车辆在高速公里"
		         android:textColor="@color/common" />
	        <RelativeLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:text="100"/>
	            <ImageView 
	                android:layout_width="20dp"
	                android:layout_height="20dp"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="30dp"
	                android:src="@drawable/ic_launcher"/>
	        </RelativeLayout>
	    </LinearLayout>
	    
	    <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	        	android:background="@drawable/bg_card"
	            android:padding="@dimen/margins"
	            android:gravity="center_horizontal"
	            android:text="车友回答(100)"
	            android:textColor="@color/common" />	
	    <LinearLayout 
	        android:id="@+id/ll_friend_ask"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/margins"
	    	android:background="@drawable/bg_card"
	        android:orientation="vertical">
	        <TextView
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:text="超速多少分"
		         android:textColor="@color/common" />
	        <TextView
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:text="驾驶中型以上的货车，小车，危险物品运输车辆在高速公里"
		         android:textColor="@color/common" />
	        <RelativeLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:text="100"/>
	            <ImageView 
	                android:layout_width="20dp"
	                android:layout_height="20dp"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="30dp"
	                android:src="@drawable/ic_launcher"/>
	        </RelativeLayout>
	    </LinearLayout>
	</LinearLayout>	
</RelativeLayout>