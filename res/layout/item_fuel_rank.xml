<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.wise.baba" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <com.wise.baba.ui.widget.CircleImageView
        android:id="@+id/iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/margins"
        android:src="@drawable/icon_car"
        app:border_width="1dp"
        app:border_color="@color/white" />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margins"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_level" 
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_star_level_sel"/>
	        <TextView
	            android:id="@+id/tv_name" 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/content"
	            android:textColor="@color/navy"/>
        </RelativeLayout>
        <TextView 
            android:id="@+id/tv_est"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content"
            android:layout_margin="5dp"
            android:textColor="@color/navy"/>
        <TextView 
            android:id="@+id/tv_avg" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/navy"/>
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">
            <ImageView
                android:id="@+id/iv_letter" 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:background="@drawable/bg_common"
                android:layout_marginRight="@dimen/margins"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_lvse"/>
            <ImageView 
                android:layout_toLeftOf="@id/iv_letter"
                android:layout_marginRight="@dimen/margins"
                android:layout_width="20dp"
                android:layout_height="20dp"
            	android:visibility="gone"
                android:src="@drawable/icon_zan_reply"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>