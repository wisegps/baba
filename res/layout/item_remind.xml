<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rl_car"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margins"
        android:paddingLeft="@dimen/margins" >
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_width"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/app_name"/>
        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_icon"
            android:orientation="vertical" >
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_remind_type"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="@dimen/double_margins"
	                android:text="车辆年审"
	                android:textColor="@color/navy"
	                android:textSize="@dimen/content" />
                <TextView
                    android:id="@+id/tv_obj_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/navy"
	                android:text="粤B12345"
	                android:textSize="@dimen/content" />
            </LinearLayout>
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">                
	            <TextView
	                android:id="@+id/tv_remind_time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:layout_marginRight="@dimen/margins"
	                android:text="2014-08-12"
	                android:layout_centerVertical="true"
	                android:textColor="@color/navy"
	                android:textSize="@dimen/small" />
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:orientation="horizontal">
			        <TextView
			            android:id="@+id/tv_date"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/big_number"
			            android:text="80"
			            android:textColor="@color/navy" />
			        <TextView
			            android:id="@+id/tv_day"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
			            android:text="天"
			            android:textColor="@color/navy" />
	            </LinearLayout>
            </RelativeLayout>
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">                
	            <TextView
	                android:id="@+id/tv_remind_mileage"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5dp"
	                android:layout_marginRight="@dimen/margins"
	                android:text="450000KM"
	                android:textColor="@color/navy"
	                android:textSize="@dimen/small" />
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:orientation="horizontal">
	                <TextView
			            android:id="@+id/tv_mileage"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/big_number"
			            android:text="100"
			            android:textColor="@color/navy" />
			        <TextView
			            android:id="@+id/tv_mileage_unit"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="@dimen/content"
			            android:text="公里"
			            android:textColor="@color/navy" />
	            </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>