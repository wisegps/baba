<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_huise">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/title_back">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="添加提醒"
            android:textColor="@color/white"
            android:textSize="@dimen/head"/>
        <ImageView 
            android:id="@+id/iv_back"
	        android:layout_width="@dimen/title_hight"
	        android:layout_height="@dimen/title_hight"
	        android:layout_marginLeft="@dimen/margins"
	        android:padding="@dimen/margins"
	        android:layout_centerVertical="true"
	        android:src="@drawable/nav_back"/>
        <ImageView 
            android:id="@+id/iv_ok"
	        android:layout_width="@dimen/title_hight"
	        android:layout_height="@dimen/title_hight"
	        android:layout_marginRight="@dimen/margins"
	        android:layout_alignParentRight="true"
	        android:padding="@dimen/margins"
	        android:layout_centerVertical="true"
	        android:src="@drawable/nav_ok"/>
	</RelativeLayout>
	<ScrollView 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/margins"	        
	        android:orientation="vertical">
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/et_back"
	            android:padding="@dimen/margins"
	            android:orientation="horizontal">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/common"
	                android:textSize="@dimen/main"
	                android:text="类型:"/>
	            <Spinner 
	                android:id="@+id/s_type"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"/>
	        </LinearLayout>
	        <LinearLayout
	            android:id="@+id/ll_car"
	            android:layout_marginTop="@dimen/margins"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/et_back"
	            android:padding="@dimen/margins"
	            android:orientation="horizontal">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/common"
	                android:textSize="@dimen/main"
	                android:text="车辆:"/>
	            <Spinner 
	                android:id="@+id/s_car"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"/>
	        </LinearLayout>
	        <LinearLayout
	            android:id="@+id/ll_mileage"
	            android:layout_marginTop="@dimen/margins"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/et_back"
	            android:padding="@dimen/margins"
	            android:orientation="horizontal">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/common"
	                android:textSize="@dimen/main"
	                android:text="里程:"/>
	            <EditText 
	                android:id="@+id/et_mileage"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:inputType="number"/>
	        </LinearLayout>
	        <LinearLayout
	            android:layout_marginTop="@dimen/margins"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/et_back"
	            android:padding="@dimen/margins"
	            android:orientation="horizontal">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/common"
	                android:textSize="@dimen/main"
	                android:text="重复:"/>
	            <Spinner 
	                android:id="@+id/s_mode"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"/>
	        </LinearLayout>
	        <LinearLayout
	            android:id="@+id/ll_content"
	            android:layout_marginTop="@dimen/margins"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/et_back"
	            android:padding="@dimen/margins"
	            android:orientation="horizontal">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/common"
	                android:textSize="@dimen/main"
	                android:text="内容:"/>
	            <EditText 
	                android:id="@+id/et_content"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:inputType="number"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_marginTop="@dimen/margins"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:background="@drawable/et_back">
	            <TextView 
	                android:id="@+id/tv_remind_time"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:textColor="@color/blue"
	                android:textSize="@dimen/main"
	                android:gravity="center_horizontal"/>	            
	            <View 
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/line"/>
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	                <wheel.widget.WheelView android:id="@+id/data_year"
				        android:layout_height="140dp"
				        android:layout_width="100dp"/>   
				    <wheel.widget.WheelView android:id="@+id/data_month"
				        android:layout_height="140dp"
				        android:layout_width="80dp"/>
				    <wheel.widget.WheelView android:id="@+id/data_day"
				        android:layout_height="140dp"
				        android:layout_width="80dp"
				        android:layout_marginRight="10dp"/>
	            </LinearLayout>
	            <View 
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/line"/>
	            <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center_horizontal"
	                android:textSize="@dimen/main"
	                android:textColor="@color/color_blue"
	                android:padding="@dimen/margins"
	                android:text="提醒  提前三天"/>
	            <View 
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/line"/>
	            <TextView 
	                android:id="@+id/tv_before1"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center_horizontal"
	                android:textSize="@dimen/main"
	                android:textColor="@color/color_blue"
	                android:background="@drawable/bg_white"
	                android:padding="@dimen/margins"
	                android:text="提前一天"/>
	            <TextView 
	                android:id="@+id/tv_before3"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center_horizontal"
	                android:textSize="@dimen/main"
	                android:textColor="@color/color_blue"
	                android:padding="@dimen/margins"
	                android:background="@drawable/bg_qianlan"
	                android:text="提前三天"/>
	            <TextView 
	                android:id="@+id/tv_before7"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center_horizontal"
	                android:textSize="@dimen/main"
	                android:textColor="@color/color_blue"
	                android:padding="@dimen/margins"
	                android:background="@drawable/bg_white"
	                android:text="提前七天"/>
	        </LinearLayout>
	    </LinearLayout>
	</ScrollView>
</LinearLayout>
