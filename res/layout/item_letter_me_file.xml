<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.wise.baba"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/margins" >
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margins"
        android:gravity="center_horizontal"
        android:textColor="@color/navy_light"
        android:textSize="@dimen/small"
        android:visibility="gone" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical" >
        <com.wise.baba.ui.widget.CircleImageView
            android:id="@+id/iv_me"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margins"
            android:src="@drawable/icon_car"
            app:border_color="@color/white"
            app:border_width="1dp" />
        <TextView
            android:id="@+id/tv_me_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_me"
            android:background="@drawable/chat_i_shuru"
            android:paddingLeft="@dimen/margins"
            android:paddingTop="@dimen/margins"
            android:paddingBottom="@dimen/margins"
            android:paddingRight="15dp"
            android:textColor="@color/navy"
            android:textSize="@dimen/content" />
    </RelativeLayout>
</LinearLayout>