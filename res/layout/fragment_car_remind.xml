<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/title_back">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/car_remind"
            android:textColor="@color/white"
            android:textSize="@dimen/head"/>
        <ImageView 
            android:id="@+id/iv_remind_back"
	       style="@style/title_back_style"/>
        <ImageView 
            android:id="@+id/iv_add"
	        android:layout_width="@dimen/title_hight"
	        android:layout_height="@dimen/title_hight"
	        android:layout_marginRight="@dimen/margins"
	        android:layout_alignParentRight="true"
	        android:padding="15dp"
	        android:layout_centerVertical="true"
	        android:src="@drawable/nav_add"/>
	</RelativeLayout>
	<RelativeLayout 
        android:id="@+id/rl_Note"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout 
         android:layout_centerInParent="true"
            android:layout_width="264dp"
            android:layout_height="162dp">                
         <ImageView
             android:id="@+id/iv_nothing"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:src="@drawable/icon_reminder" />	            
         <TextView
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             android:textColor="@color/white"
             android:textSize="@dimen/title" 
             android:layout_alignParentBottom="true"
             android:layout_marginBottom="25dp"
             android:text="没有消息记录"/>
        </RelativeLayout>
    </RelativeLayout>
	<LinearLayout
	    android:id="@+id/ll_frist" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:background="@drawable/bg_white"
        android:paddingTop="@dimen/margins"
    	android:paddingBottom="@dimen/margins"
	    android:visibility="gone"
	    android:orientation="vertical">
	    <TextView
			android:id="@+id/tv_car_name"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/main"
	        android:gravity="center_horizontal"
	        android:textColor="@color/navy"/>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        <TextView
	            android:id="@+id/tv_date_last" 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="@dimen/main"
		        android:textColor="@color/navy"
		        android:text="还有"/>
	        <TextView
	            android:id="@+id/tv_date" 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="30sp"
		        android:textColor="@color/blue_press"
		        android:text="3"/>
	        <TextView 
	            android:id="@+id/tv_date_next" 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="@dimen/main"
		        android:textColor="@color/navy"
		        android:text="天"/>
	    </LinearLayout>
	</LinearLayout>
	<View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />
	<ListView 
	    android:id="@+id/lv_remind"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:cacheColorHint="#00000000"
        android:divider="@color/gay_line"
        android:dividerHeight="0.5dp" ></ListView>
	<View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />
</LinearLayout>
