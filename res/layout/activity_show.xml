<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >
    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_hight"
        android:background="@color/title_back" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="秀一下"
            android:textColor="@color/white"
            android:textSize="@dimen/title" />

        <ImageView
            android:id="@+id/iv_back"
           style="@style/title_back_style"/>

        <ImageView
            android:id="@+id/iv_show_car"
            android:layout_width="@dimen/title_hight"
            android:layout_height="@dimen/title_hight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margins"
            android:src="@drawable/nav_icon_pic_add" />

        <ImageView
            android:id="@+id/iv_choose"
            android:layout_width="@dimen/title_hight"
            android:layout_height="@dimen/title_hight"
            android:layout_centerVertical="true"
            android:layout_marginRight="-10dp"
            android:layout_toLeftOf="@id/iv_show_car"
            android:padding="@dimen/margins"
            android:src="@drawable/pindao" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_main"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_car"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="爱车"
            android:textColor="@color/white"
            android:background="@color/Green"
            android:textSize="@dimen/main" />

        <TextView
            android:id="@+id/tv_baby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="美女"
            android:textColor="@color/Green"
            android:textSize="@dimen/main" />

        <TextView
            android:id="@+id/tv_scenery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="美景"
            android:textColor="@color/Green"
            android:textSize="@dimen/main" />

        <TextView
            android:id="@+id/tv_road"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="路况"
            android:textColor="@color/Green"
            android:textSize="@dimen/main" />

        <TextView
            android:id="@+id/tv_travel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="现场"
            android:textColor="@color/Green"
            android:textSize="@dimen/main" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_photo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_menu" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_menu"
        android:background="@color/Green"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="2014-07-08"
        android:textColor="@color/white"
        android:textSize="@dimen/main"
        android:visibility="gone" />

</RelativeLayout>