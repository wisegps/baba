<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout 
    	android:background="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="@dimen/margins"
        android:paddingBottom="@dimen/margins"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	android:orientation="horizontal" >
        <RelativeLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1">        
		    <ImageView 
		        android:id="@+id/iv_satellite"
		        android:layout_centerHorizontal="true"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/bd_wallet_blue_color_bg_selector"
		        android:src="@drawable/main_map_mode_satellite_normal"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/iv_satellite"
		        android:layout_marginTop="5dp"
		        android:text="卫星图"/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1">        
		    <ImageView 
		        android:id="@+id/iv_plain"
		        android:layout_centerHorizontal="true"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/bd_wallet_blue_color_bg_selector"
		        android:src="@drawable/main_map_mode_plain_normal"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/iv_plain"
		        android:layout_marginTop="5dp"
		        android:text="2D平面图"/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1">        
		    <ImageView 
		        android:id="@+id/iv_3d"
		        android:layout_centerHorizontal="true"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/bd_wallet_blue_color_bg_selector"
		        android:src="@drawable/main_map_mode_3d_normal"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/iv_3d"
		        android:layout_marginTop="5dp"
		        android:text="3D俯视图"/>
	    </RelativeLayout>
    </LinearLayout>    
</LinearLayout>