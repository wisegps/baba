<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AnimHead" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/in_from_top</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <!-- 卡片布局统一样式 -->
    <style name="home_card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 卡片布局标题样式   周边等 -->
    <style name="home_card_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!-- 卡片布局 下拉箭头 -->
    <style name="home_card_img_down_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ico_down</item>
    </style>

    <!-- 新闻分隔线 -->
    <style name="home_news_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">#bbbbbb</item>
    </style>

     <!-- 新闻字體 -->
    <style name="home_news_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
         <item name="android:layout_marginRight">12dp</item>
        <item name="android:textColor">#5e5e60</item>
         <item name="android:textSize">17sp</item>
    </style>
    
      <!-- 标题返回按钮样式 -->
    <style name="title_back_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/nav_back</item>
    </style>
    
        <!-- 底部导航字体样式 -->
    <style name="bottom_text_nav_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:alpha">0.8</item>
         <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
</resources>